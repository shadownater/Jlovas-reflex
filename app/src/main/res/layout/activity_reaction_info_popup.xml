<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.learning.jlovas.jlovas_reflex.ReactionInfoPopup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the\nReaction Timer"
        android:id="@+id/welcome"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_above="@+id/instructions"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tap quickly when the\nbackground changes."
        android:id="@+id/instructions"
        android:gravity="center_horizontal"
        android:layout_above="@+id/popupButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Continue"
        android:textSize="20sp"
        android:id="@+id/popupButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:background="#68c8ff"
        android:onClick="continueButton"/>

</RelativeLayout>
